        /// <summary>
        /// Loads the last selection criteria that the user selected when using the report last time
        /// </summary>
        public void LoadLastSelectionCriteria()
        {
            XmlDocument document = UIBLLInteraction.Instance.GetRecentsDocment();
            try
            {
                XmlNode currentReportNode = document.SelectSingleNode("Root/TotalFinancialSummary");
                if (currentReportNode != null)
                {
                    string value = currentReportNode.Attributes["Project"].Value;
                    if (value != "Null")
                    {
                        gridLookUpEditProject.EditValue = Convert.ToInt32(value);
                        value = currentReportNode.Attributes["Scenario"].Value;
                        if (value != "Null")
                        {
                            gridLookUpEditScenario1.EditValue = Convert.ToInt32(value);
                        }
                        value = currentReportNode.Attributes["ShowDeltasVSBase"].Value;
                        checkEditShowDeltasVSBase.Checked = Convert.ToBoolean(value);

                        value = currentReportNode.Attributes["UseUtilityGuaranteeMultiplier"].Value;
                        checkEditUseUtilityguaranteemultiplier.Checked = Convert.ToBoolean(value);

                        value = currentReportNode.Attributes["SelectAllScenarios"].Value;
                        checkEditSelectAllScenarios.Checked = Convert.ToBoolean(value);

                        value = currentReportNode.Attributes["ComponentSortMethod"].Value;
                        radioGroupCompnentSortMethod.SelectedIndex = Convert.ToInt32(value);

                        value = currentReportNode.Attributes["FCLPM"].Value;
                        spinEditFCLPM.Value = Convert.ToDecimal(value);

                        value = currentReportNode.Attributes["FCHPM"].Value;
                        spinEditFCHPM.Value = Convert.ToDecimal(value);

                        value = currentReportNode.Attributes["NFCLPM"].Value;
                        spinEditNFCLPM.Value = Convert.ToDecimal(value);

                        value = currentReportNode.Attributes["NFCHPM"].Value;
                        spinEditNFCHPM.Value = Convert.ToDecimal(value);

                        value = currentReportNode.Attributes["CapRate"].Value;
                        spinEditCapRate.Value = Convert.ToDecimal(value);
                    }
                }
                else
                {
                    MessageBox.Show(UIBLLInteraction.RECENT_SELECTION_FILE_ERROR, UIBLLInteraction.ERROR_MESSAGE_TITLE,
                                    MessageBoxButtons.OK, MessageBoxIcon.Error);
                }
            }
            catch (XmlException)
            {
                MessageBox.Show(UIBLLInteraction.RECENT_SELECTION_FILE_ERROR, UIBLLInteraction.ERROR_MESSAGE_TITLE,
                                MessageBoxButtons.OK, MessageBoxIcon.Error);
            }
                //Catch exceptions during using a null value iterator
            catch (NullReferenceException nullReferenceException)
            {
                MessageBox.Show(UIBLLInteraction.RECENT_SELECTION_FILE_ERROR, UIBLLInteraction.ERROR_MESSAGE_TITLE,
                                MessageBoxButtons.OK, MessageBoxIcon.Error);
                Application.Logger.LogException(nullReferenceException);
            }
        }

        /// <summary>
        /// Update the XML file containing the recent selection criteria with the current selection
        /// </summary>
        private void UpdateRecentSelection(Control control)
        {
            try
            {
                XmlDocument document = UIBLLInteraction.Instance.GetRecentsDocment();
                if (control == gridLookUpEditProject)
                {
                    document.SelectSingleNode("Root/TotalFinancialSummary").Attributes["Project"].Value =
                        (gridLookUpEditProject.EditValue == null) ? "Null" : gridLookUpEditProject.EditValue.ToString();
                }
                else if (control == gridLookUpEditScenario1)
                {
                    document.SelectSingleNode("Root/TotalFinancialSummary").Attributes["Scenario"].Value =
                        (gridLookUpEditScenario1.EditValue == null)
                            ? "Null"
                            : gridLookUpEditScenario1.EditValue.ToString();
                }
                else if (control == checkEditShowDeltasVSBase)
                {
                    document.SelectSingleNode("Root/TotalFinancialSummary").Attributes["ShowDeltasVSBase"].Value =
                        checkEditShowDeltasVSBase.Checked.ToString();
                }
                else if (control == checkEditUseUtilityguaranteemultiplier)
                {
                    document.SelectSingleNode("Root/TotalFinancialSummary").Attributes["UseUtilityGuaranteeMultiplier"].
                        Value = checkEditUseUtilityguaranteemultiplier.Checked.ToString();
                }
                else if (control == checkEditSelectAllScenarios)
                {
                    document.SelectSingleNode("Root/TotalFinancialSummary").Attributes["SelectAllScenarios"].Value =
                        checkEditSelectAllScenarios.Checked.ToString();
                }
                else if (control == radioGroupCompnentSortMethod)
                {
                    document.SelectSingleNode("Root/TotalFinancialSummary").Attributes["ComponentSortMethod"].Value =
                        radioGroupCompnentSortMethod.SelectedIndex.ToString();
                }
                else if (control == spinEditFCLPM)
                {
                    document.SelectSingleNode("Root/TotalFinancialSummary").Attributes["FCLPM"].Value =
                        spinEditFCLPM.Value.ToString();
                }
                else if (control == spinEditFCHPM)
                {
                    document.SelectSingleNode("Root/TotalFinancialSummary").Attributes["FCHPM"].Value =
                        spinEditFCHPM.Value.ToString();
                }
                else if (control == spinEditNFCLPM)
                {
                    document.SelectSingleNode("Root/TotalFinancialSummary").Attributes["NFCLPM"].Value =
                        spinEditNFCLPM.Value.ToString();
                }
                else if (control == spinEditNFCHPM)
                {
                    document.SelectSingleNode("Root/TotalFinancialSummary").Attributes["NFCHPM"].Value =
                        spinEditNFCHPM.Value.ToString();
                }
                else if (control == spinEditCapRate)
                {
                    document.SelectSingleNode("Root/TotalFinancialSummary").Attributes["CapRate"].Value =
                        spinEditCapRate.Value.ToString();
                }
                document.Save(UIBLLInteraction.Instance.TCORECENTS_FILE_NAME);
            }
            catch (NullReferenceException)
            {
            }
            catch (XmlException)
            {
                MessageBox.Show(UIBLLInteraction.RECENT_SELECTION_FILE_ERROR, UIBLLInteraction.ERROR_MESSAGE_TITLE,
                                MessageBoxButtons.OK, MessageBoxIcon.Error);
            }
        }

