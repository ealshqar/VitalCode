        #region Report Generate

        //---------------------------------------------------------------------------------------------
        private void GenerateTotalFinancialSummaryReport()
        {
            if (generate)
            {
                try
                {
                    var reflectorBar = new ReflectorBar(progressBarControl1);
                    bool scenarioCheckOk = (checkEditSelectAllScenarios.Checked)
                                               ? true
                                               : ((currentScenario != null) ? true : false);
                    if (SelectedProject != null && scenarioCheckOk)
                    {
                        var tfsReportManager = new ReportROMMatrixManager();
                        BusinessObjectList<ReportROMMatrixRecord> reportData = checkEditSelectAllScenarios.Checked
                                                                                   ? tfsReportManager.
                                                                                         GetROMMAtrixReportForMultipleScenarios
                                                                                         (
                                                                                         SelectedProject,
                                                                                         checkEditUseUtilityguaranteemultiplier
                                                                                             .Checked,
                                                                                         CapRate,
                                                                                         Convert.ToDouble(ScallingFactor),
                                                                                         NPV,
                                                                                         InflationRate,
                                                                                         DiscountRate,
                                                                                         checkEditShowDeltasVSBase.
                                                                                             Checked)
                                                                                   : tfsReportManager.
                                                                                         GetReportROMMatrixForOneScenario
                                                                                         (
                                                                                         currentScenario,
                                                                                         checkEditUseUtilityguaranteemultiplier
                                                                                             .Checked,
                                                                                         CapRate,
                                                                                         Convert.ToDouble(ScallingFactor),
                                                                                         NPV,
                                                                                         InflationRate,
                                                                                         DiscountRate,
                                                                                         checkEditShowDeltasVSBase.
                                                                                             Checked);

                        if (reportData.Count > 0)
                        {
                            barButtonItemFullScreen.Enabled = true;
                            rep = new TotalFinancialSummaryReport();

                            rep.SetWidth(reportData.Count);
                            rep.ColumnsSubReport.SetSortingMethod(ComponentSortMethod);
                            rep.ColumnsSubReport.bindingSourceTFS.DataSource = reportData;
                            rep.ColumnsSubReport.recordsCount = reportData.Count;
                            rep.bindingSourceChart.DataSource = reportData;
                            rep.GeneratedDate.Value = DateTime.Now;
                            rep.ProjectName.Value = gridLookUpEditProject.Text;
                            if (checkEditSelectAllScenarios.Checked)
                            {
                                rep.ScenarioName.Value = "All Scenarios";
                            }
                            else
                            {
                                rep.ScenarioName.Value = gridLookUpEditScenario1.Text;
                                string caption = "Component";
                                if (SelectedProject != null)
                                {
                                    if (SelectedProject.ComponentCaption != null)
                                    {
                                        if (SelectedProject.ComponentCaption != string.Empty)
                                        {
                                            caption = SelectedProject.ComponentCaption;
                                            rep.LabelsSubReport.SetComponentCaption(caption.Trim());
                                        }
                                    }
                                }
                                if (caption == string.Empty)
                                {
                                    rep.LabelsSubReport.SetComponentCaption("Component");
                                }
                                else if (caption == string.Empty)
                                {
                                    rep.LabelsSubReport.SetComponentCaption("Component");
                                }
                            }
                            rep.NPV.Value = NPV;
                            rep.CapRate.Value = CapRate;
                            rep.DiscountRate.Value = DiscountRate;
                            rep.InflationRate.Value = InflationRate;
                            rep.UtilityGuaranteeUsed.Value = checkEditUseUtilityguaranteemultiplier.Checked;
                            rep.DeltasVSBase.Value = checkEditShowDeltasVSBase.Checked;

                            rep.ColumnsSubReport.FCLPMValue = Convert.ToDouble(spinEditFCLPM.Value);
                            rep.ColumnsSubReport.FCHPMValue = Convert.ToDouble(spinEditFCHPM.Value);
                            rep.ColumnsSubReport.NFCLPMValue = Convert.ToDouble(spinEditNFCLPM.Value);
                            rep.ColumnsSubReport.NFCHPMValue = Convert.ToDouble(spinEditNFCHPM.Value);
                            rep.ColumnsSubReport.CapRate = Convert.ToDouble(spinEditCapRate.Value);
                            rep.IsForComponents.Value = !checkEditSelectAllScenarios.Checked;
                            rep.SetVisibilityOptions();


                            ProgressReflector.RegisterReflector(reflectorBar);
                            printBarManagerMain.PrintControl.PrintingSystem = rep.PrintingSystem;
                            try
                            {
                                rep.PrintingSystem.ProgressReflector = reflectorBar;
                                rep.CreateDocument();
                            }
                            finally
                            {
                                rep.PrintingSystem.ResetProgressReflector();
                            }
                            fullScreenReport = rep;
                        }
                        else
                        {
                            MessageBox.Show(NO_UTILITY_INFO_WAS_FOUND, UIBLLInteraction.ERROR_MESSAGE_TITLE,
                                            MessageBoxButtons.OK, MessageBoxIcon.Error);
                        }
                    }
                    else
                    {
                        MessageBox.Show(PROJECT_IS_NULL, UIBLLInteraction.ERROR_MESSAGE_TITLE, MessageBoxButtons.OK,
                                        MessageBoxIcon.Error);
                    }
                    progressBarControl1.Position = 0;
                }
                catch (DataAccessException)
                {
                    generate = false;
                    MessageBox.Show(DB_ERROR, UIBLLInteraction.ERROR_MESSAGE_TITLE, MessageBoxButtons.OK,
                                    MessageBoxIcon.Error);
                }
            }
        }

