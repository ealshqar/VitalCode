        #region Report Generate

        //---------------------------------------------------------------------------------------------
        private void GenerateUtilityReport()
        {
            if (generate)
            {
                try
                {
                    var reflectorBar = new ReflectorBar(progressBarControl1);
                    if (SelectedProject != null && currentScenario != null)
                    {
                        if (currentScenario.FirstCost != null)
                        {
                            currentScenario.LazyLoadChildren();
                            currentScenario.FirstCost.LazyLoadChildren();
                            if (currentScenario.FirstCost.HasLineItems)
                            {
                                var budgetSummaryManager = new BudgetSummeryReportManager();
                                BudgetSummeryReport currentReportSource =
                                    budgetSummaryManager.GenerateBudgetSummeryReport(currentScenario.Id.Value);
                                int itemNotZero = 0;
                                foreach (
                                    BudgetSummeryReportLineItem item in currentReportSource.BudgetSummeryReportLineItems
                                    )
                                {
                                    if (item.FeeDollars != 0)
                                    {
                                        itemNotZero += 1;
                                    }
                                }
                                if (currentReportSource.BudgetSummeryReportLineItems.Count > 0 && itemNotZero > 0)
                                {
                                    barButtonItemFullScreen.Enabled = true;
                                    rep = new BudgetSummaryParentReport
                                              {
                                                  bindingSource1 = {DataSource = currentReportSource}
                                              };
                                    if (currentReportSource.ComponentsFirstCostSectionsTotals.Count == 0)
                                    {
                                        rep.ShowHideFCSection(false);
                                    }
                                    rep.FCSubReport.bindingSource1.DataSource =
                                        currentReportSource.ComponentsFirstCostSectionsTotals;

                                    long sfcTotal =
                                        (from sfc in currentReportSource.BudgetSummeryReportLineItems
                                         select sfc.FeeDollars).Sum();
                                    long abTotal = (from sfc in currentReportSource.BudgetSummeryReportLineItems
                                                    where sfc.Section == ScenarioFirstCostSection.SectionA |
                                                          sfc.Section == ScenarioFirstCostSection.SectionB
                                                    select sfc.FeeDollars).Sum() +
                                                   currentReportSource.ComponentsTotalFirstCost;
                                    long aTotal = (from sfc in currentReportSource.BudgetSummeryReportLineItems
                                                   where sfc.Section == ScenarioFirstCostSection.SectionA
                                                   select sfc.FeeDollars).Sum() +
                                                  currentReportSource.ComponentsTotalFirstCost;

                                    rep.LineItemSubReport.AllSectionsTotals = sfcTotal +
                                                                              currentReportSource.
                                                                                  ComponentsTotalFirstCost;
                                    rep.LineItemSubReport.AAndBTotals = abTotal;
                                    rep.LineItemSubReport.ATotals = aTotal;
                                    rep.LineItemSubReport.bindingSource1.DataSource =
                                        currentReportSource.BudgetSummeryReportLineItems;
                                    rep.LineItemSubReport.HidePercentages.Value = checkEditHidePercentages.Checked;
                                    rep.ProjectName.Value = SelectedProject.Name;
                                    rep.ScenarioName.Value = currentScenario.Name;
                                    rep.GenerationDate.Value = DateTime.Now;
                                    rep.Estimator.Value = SelectedProject.SFCEstimator;
                                    if (SelectedProject.ComponentCaption != null)
                                    {
                                        rep.FCSubReport.SetComponentCaption(SelectedProject.ComponentCaption);
                                    }

                                    if (SelectedProject.WorkForCustomerID.HasValue)
                                    {
                                        try
                                        {
                                            BusinessObjectList<Customer> customers =
                                                BusinessLayerCache.Instance.GetAllCustomers();
                                            rep.Customer.Value =
                                                customers[SelectedProject.WorkForCustomerID.Value - 1].Name;
                                        }
                                        catch (DataAccessException)
                                        {
                                        }
                                    }


                                    //ProgressReflector.RegisterReflector(reflectorBar);
                                    printBarManagerMain.PrintControl.PrintingSystem = rep.PrintingSystem;
                                    try
                                    {
                                        rep.PrintingSystem.ProgressReflector = reflectorBar;
                                        rep.CreateDocument();
                                    }
                                    finally
                                    {
                                        rep.PrintingSystem.ResetProgressReflector();
                                    }
                                    fullScreenReport = rep;
                                }
                                else
                                {
                                    generate = false;
                                    if (currentReportSource.BudgetSummeryReportLineItems.Count > 0)
                                    {
                                        MessageBox.Show(SCENARIO_HAS_NO_LINE_NOT_ZERO_ITEMS,
                                                        UIBLLInteraction.ERROR_MESSAGE_TITLE, MessageBoxButtons.OK,
                                                        MessageBoxIcon.Error);
                                    }
                                    else
                                    {
                                        MessageBox.Show(SCENARIO_HAS_NO_LINE_ITEMS, UIBLLInteraction.ERROR_MESSAGE_TITLE,
                                                        MessageBoxButtons.OK, MessageBoxIcon.Error);
                                    }
                                }
                            }
                            else
                            {
                                generate = false;
                                MessageBox.Show(SCENARIO_HAS_NO_LINE_ITEMS, UIBLLInteraction.ERROR_MESSAGE_TITLE,
                                                MessageBoxButtons.OK, MessageBoxIcon.Error);
                            }
                        }
                        else
                        {
                            generate = false;
                            MessageBox.Show(SCENARIO_IS_NULL, UIBLLInteraction.ERROR_MESSAGE_TITLE, MessageBoxButtons.OK,
                                            MessageBoxIcon.Error);
                        }
                    }
                    else
                    {
                        generate = false;
                        MessageBox.Show(PROJECT_IS_NULL, UIBLLInteraction.ERROR_MESSAGE_TITLE, MessageBoxButtons.OK,
                                        MessageBoxIcon.Error);
                    }
                    progressBarControl1.Position = 0;
                    //ProgressReflector.UnregisterReflector(reflectorBar);
                }
                catch (DataAccessException)
                {
                    generate = false;
                    MessageBox.Show(DB_ERROR, UIBLLInteraction.ERROR_MESSAGE_TITLE, MessageBoxButtons.OK,
                                    MessageBoxIcon.Error);
                }
            }
        }

