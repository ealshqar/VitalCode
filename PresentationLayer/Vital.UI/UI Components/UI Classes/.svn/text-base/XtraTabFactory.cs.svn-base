#region Library Calls

//---------------------------------------------------------------------------------------------
using Equiom.Tco.BusinessLogicLayer;

//---------------------------------------------------------------------------------------------

#endregion

namespace TCO.DesktopClientDevexpress
{
    public static class XtraTabFactory
    {
        #region Fields

        //---------------------------------------------------------------------------------------------
        //---------------------------------------------------------------------------------------------

        #endregion

        #region Methods

        //---------------------------------------------------------------------------------------------
        /// <summary>
        /// Gets a business object and return a correct type tab
        /// </summary>
        /// <returns></returns>
        public static XtraTabPageEntity GetTab(EntityBusinessObject businessObject)
        {
            if (businessObject is Project)
            {
                var project = new XtraTabPageProject {TabType = TabTypes.Project};
                return project;
            }
            if (businessObject is Component)
            {
                var component = new XtraTabPageComponent {TabType = TabTypes.Component};
                return component;
            }
            if (businessObject is Building)
            {
                var building = new XtraTabPageBuilding {TabType = TabTypes.Building};
                return building;
            }
            return new XtraTabPageEntity();
        }

        /// <summary>
        /// Gets an entity type and return a correct type tab
        /// </summary>
        /// <returns></returns>
        public static XtraTabPageEntity GetTab(EntityType entityType)
        {
            switch (entityType)
            {
                case EntityType.Projects:
                    var project = new XtraTabPageProject {TabType = TabTypes.Project};
                    return project;
                case EntityType.Components:
                    var component = new XtraTabPageComponent {TabType = TabTypes.Component};
                    return component;
                case EntityType.Buildings:
                    var building = new XtraTabPageBuilding {TabType = TabTypes.Building};
                    return building;
                default:
                    return new XtraTabPageEntity();
            }
        }

        //---------------------------------------------------------------------------------------------

        #endregion
    }
}